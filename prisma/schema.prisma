datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
 
generator client {
  provider = "prisma-client-js"
}


model Issue {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  title            String  
  description      String   
  status           Status   @default(OPEN)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  assignedToUserId String? 
}

enum Status {
  OPEN
  IN_PROGRESS
  CLOSED
}
 

 
